@charset "utf-8";
/* 2018.css */

.img-background{ 
  background: url(../images/table_vietnam_bg_1280.jpg) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  z-index: -2;
}

a{
	font-size:12px;
}

/*--------------------------------------------------------------------------------*/

.navbar .navbar-collapse {
  text-align: center;
}

.navbar-fixed-top{
	-webkit-box-shadow: 0px 5px 5px 0px rgba(0,0,0,0.76);
	-moz-box-shadow: 0px 5px 5px 0px rgba(0,0,0,0.76);
	box-shadow: 0px 5px 5px 0px rgba(0,0,0,0.76);
}

.vcenter {
	align-items: center;
}

#contStart{
	width:90%;
	margin-top: 60px;
}

#bigLeftText{
	padding-top: 7%;
}

#bigImgCaption{
	text-decoration:underline;
	padding-left: 2%;
	font-size: 2em;
}

#content{
	z-index: -3:	
	float:none;
	display: flex;
    justify-content: center;
    align-items: center;
	max-width: 100%;
	max-height: 100%;
}

/* img in content */
#content img {
	z-index: -3;
	-webkit-box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
	-moz-box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
	box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
}

.jumbotron {
	display: none;
	position: absolute;
	top: 10%;
  	left: 30%;
  	border-style: solid;
	border-width: 1px;
	opacity: 0.9;
	z-index: 10;
	-webkit-box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
	-moz-box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
	box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
}

.close-jumbo{
	font-size: 1.75em;
	float: right; 
	cursor: pointer; 
	cursor: hand; 
}

#imageHeadings, #year{
	text-align:center;
	background: white;
	margin-left:auto;
	margin-right:auto;
	margin-top:12px;
	margin-bottom: 2px;
}

#imageHeadings{
	width: 80%;
}

#year{
	width: 90%;
}

#imageText{
	position: fixed;
	margin: auto;
	height: 1.6em;
	background: #D7E9FB;
	visibility:hidden;
	text-align:center;
}

#year{
	font-size: 2em;
}

.sidebar{
	margin-top: 5px;
	margin-left: 10px;
	z-index: ; -1;
	overflow: auto;
	padding-top: 10px;
	-webkit-box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
	-moz-box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
	box-shadow: 11px 11px 5px -1px rgba(0,0,0,0.76);
}

.sidebar.left {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 166px;
    background: #D7E9FB;
	z-index: ; 0;
}

/* img in sidebar */
.sidebar img { 
    display: block;
    margin: auto;
		margin-left: 15px;
		padding: 4px;
		
		/* These two go together for cross browser funcionality*/
		cursor:pointer;
		cursor: hand;
}

.sidebar p{
	text-align:center;
	margin:auto;
}

header {
    padding: 8em 0;
}

