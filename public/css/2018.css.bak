}

#txtPassword{
	max-width: 100px;
}

#login-form{
	justify-content:center;
}

.elmgrens-logga{
	color: #000000;
	font-weight: bold;
	font-size: 4rem; /* For older browser */
	font-size: 9vh;
	text-align: center;
	text-shadow: 0 1px 4px #121212;
