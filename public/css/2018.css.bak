/* Arrows to last/next year in top nav */
.stel-arrow-right, .stel-arrow-left{
	color: #777;
	padding-top: 0.9em;
	text-decoration: none !important;
	margin-bottom: 18px;
}

/* In top nav */
.stel-arrow-left{
	padding-right: 5px;
	margin-right: 5px;
}
 
/* In top nav */
.stel-arrow-right{
	padding-left: 0.5em;
	margin-left: 0;
}

/* last year and next year links in top nav */
.stel-year{
	color: #777;
	text-decoration: none !important;
}

/* navbar li hover */
.navbar-default .navbar-nav > li:hover, .navbar-default .navbar-nav > li > a:focus {
    background-color: #CCCCFF;
    color: #FFC0CB;
}

#yearWell{
	text-align:center;
}

#stel-photo-btn{
	width: 100%;
	height: 70px;
}

#stel-first-img{
	max-height: 90vh;
}

.stel-small-grey{
	color:#999999;
}

/* ************************ Password ***********************************************/

#inputPw, #btnPw, #txtPw, #labelPw {
	font-family: 'Exo', sans-serif;	
	font-size: 1.5rem;
}

#inputPw{
	border-radius: 10px;
	opacity: 0.6;
	margin: 0;
	padding: 15px;
	background:#999;
	position: absolute;
	top: 80%;
	left: 50%;
	margin-right: -50%;
	transform: translate(-50%, -50%);
	box-shadow: 5px 5px 4px 0px rgba(0,0,0,0.75);
}

#txtPw{
	height: 30px;
	width: 14rem;
	background: transparent;
	border: 1px solid rgba(0,0,0,0.6);
	border-radius: 2px;
	color: #000;
	font-weight: 400;
	padding: 4px;
}

#btnPw:hover{
	background: #CCC;
}

#btnPw:focus{
	background: #EEE;
}

#btnPw{
	cursor:pointer;
	background: transparent;
	border: 1px solid rgba(0,0,0,0.6);
	border-radius: 2px;
	color: #000;
	padding: 4px;
	font-weight: 700;
}

#updated, #webmaster{
	position:fixed;
}

#updated{
	color:#FFF;
	font-size:10px;
	right: 15px;
	bottom: 7px;
}

#webmaster{
	left: 50%;
  	margin-right: -50%;
  	transform: translate(-50%, -50%);
	bottom: 0px;
}

#webmaster a:link{
	color: #FFF;
	font-size:10px;
}

.section-header{
	float: none;
	margin: 0 auto;
	font-size: 1.5em;
}

.section-header-left{
	text-align: right;;
	margin-top: 0.8em;
	margin-right: 0.75em;
}

.container-home-page {
   padding: 0px;
}

#search-photos{
	max-width: 25%;
	border: 1px solid black;
    border-radius: 3px;
}

.month-name{
	font-weight: bold;
	margin: 0 auto;
	margin-bottom: 0;
}

.birthdays-date-name, .names-emails, #update-log-button, .link-footer-big, #btn-closeupdate-log{
	margin: 0 auto;	
}

#collapseKontakt{
	max-width: 600px;
}

#email-kontakt{
	max-width: 250px;
}

.link-big-footer:link, .link-big-footer:hover, .link-big-footer:visited, .text-big-footer{
	color: white;
	text-decoration: none;
}

.text-big-footer{
	font-size: 12px;
}

#form-div-kontakt{
	text-align: -webkit-center;
}

#form-card-kontakt{
	  text-align: left;
}

#btn-form-kontakt{
	text-align:center;
}

#search-foton{
	font-size: 1em;
	border: 1px solid #888;
}

/**************** update-log ***********************/
#collapseUpdateLog, #collapseKontakt{
	margin-left: 5%;
	margin-right: 5%;
