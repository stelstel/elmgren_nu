}

#collapseUpdateLog{
	height: 450px;
    overflow-y: auto;
}

.update-log-date, .update-log-text{
	/*font-family: unset;*/
}

.update-log-date{
	margin-top: 0.5em;
	margin-bottom: 0;
	font-weight: bold;;
}

.footer-big, .update-log-card-body, .sent-mail-modal-header, .sent-mail-modal-footer{
